<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/anime_rotational">



    <ImageView
        android:id="@+id/dial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTag="center" />

    <ImageView
        android:id="@+id/dialhook1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar2"
        app:layout_constraintCircle="@id/dial"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintTag="hop" />


    <ImageView
        android:id="@+id/dialhook2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar2"
        app:layout_constraintCircle="@id/dial"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintTag="hop" />


    <ImageView
        android:id="@+id/dialhook3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar2"
        app:layout_constraintCircle="@id/dial"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintTag="hop" />


    <ImageView
        android:id="@+id/dialhook4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar2"
        app:layout_constraintCircle="@id/dial"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintTag="hop" />


</androidx.constraintlayout.motion.widget.MotionLayout>